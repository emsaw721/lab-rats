<a href="/dashboard"> &larr; Back to Dashboard</a>
{{#if experiments.length}}
<section class="experiment-list">
  <h2 class="project_title">Project: {{project_name}}</h2>
  <h1 class="titleformat">Your Experiments</h1>
  <ol>
    {{#each experiments as |experiment|}}
    <li>
      <div id="experiment-lab-link"><a href="/project/experiment/{{id}}">{{experiment.title}}</div>
      <p>Created on {{format_date created_at}}
        ---
        last updated on {{format_date updated_at}}
      </p>

      <div class="experiment-comment-list">
        <a href="/project/experiment/{{id}}">{{experiment.comments.length}} {{format_plural "comment"
          experiment.comments.length}}</a>
      </div>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<a href="/add_experiment/{{project_id}}">Create a New Experiment</a>

