

<article>
    <h2>Edit Lab Entry</h2>
    <form class="edit-lab-form">
        <div id="lab-id" data-id="{{experiment.id}}">
            <input name="lab-title" type="text" value="{{experiment.title}}" />
            <input name="lab-purpose" type="text" value="{{experiment.purpose_and_hypothesis}}" />
            <input name="lab-bg" type="text" value="{{experiment.background}}" />
            <input name="lab-protocols" type="text" value="{{experiment.protocols_calculations_reagents_equipment}}" />
            <input name="lab-obs" type="text" value="{{experiment.observations}}" />
            <input name="lab-analysis" type="text" value="{{experiment.analysis}}" />
        </div>
        <button type="submit">Save Lab Entry</button>
        <button type="button" class="delete-lab-btn">Delete Lab Entry</button>
    </form>

       <div>
            <a href="/experiment/{{experiment.id}}">{{experiment.comments.length}} {{format_plural "comment" experiment.comments.length}}</a>
        </div>
</article>

<form class="comment-form">
    <div>
        <textarea name="comment-body"></textarea>
    </div>
    <div>
        <button id="button" type="submit">Add Comment</button>
    </div>
</form>

{{> comments experiment.comments}}

<scrpt src="/javascript/edit-lab.js"></scrpt>
<script src="/javascript/delete-lab.js"></script>
<script src="/javascript/comment.js"></script>