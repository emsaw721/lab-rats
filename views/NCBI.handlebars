
<form class="ncbi-form">
    <img id="ncbiimg" src="/img/pubmed.png" width="150">
    <h1 class="titleformat">NCBI PubMed search</h1>
    <input class="ncbi-input" name="ncbi-input" ></input>
    <button class="ncbi-btn"> search </button>
</form>
{{# if text}}
<div class="result-div">
    <h4>There are <span>{{count}}</span> results about <span>{{text}}</span> from NCBI PubMed.</h4>
    <ul class="result-list">
        {{#each papers}}
        <li class="paper">
            <a class="papertitle" href="https://pubmed.ncbi.nlm.nih.gov/{{pmid}}" target="_blank">Title: {{title}}</a>
            <div class="journal">Journal: {{raw.fulljournalname}} {{raw.pubdate}} Type: {{raw.pubtype}}</div>
            <div class="author">{{format_plural 'Author' raw.authors.length}}: {{authors}}</div>
            <div class="pmid">
                <p>PMID: {{pmid}}{{#if doi}}<a href="https://doi.org/{{doi}}" target="_blank"> DOI: {{doi}}</a>{{/if}}</p>
                 
            </div>
        </li>
        {{/each}}
    </ul>
</div>
{{/if}}

<script src="/javascript/ncbisearch.js"></script>