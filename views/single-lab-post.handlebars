

    <a href="/project/{{experiment.project_id}}" class="mx-5"> &larr; Back to View All the Experiments in this Project</a>
  <section style="margin-left:100px;" id="notebookid" data-id="{{experiment.project_id}}">
    <h2 class="project_title">Project: {{experiment.project.project_name}}</h2>
    <div class="titleformat" style="font-size: 45px; margin-bottom:50px;" id="experimentid" data-id="{{experiment.id}}">Experiment Title <br/>{{experiment.title}}</div>
    <div class="experiment-view-heading">Purpose and Hypothesis
      <div style="margin:100px;" class="purpose-lab" id="purpose-lab">{{experiment.purpose_and_hypothesis}}</div>
    </div>
    <div class="experiment-view-heading">Background
      <div style="margin:100px;" class="bg-lab" id="bg-lab">{{experiment.background}}</div>
    </div>
    <div class="experiment-view-heading">Protocols, Calculations, Reagents, Equipment
      <div style="margin:100px;" class="protocols-lab" id="protocols-lab">{{experiment.protocols_calculations_reagents_equipment}}</div>
    </div>
    <div class="experiment-view-heading">Observations
      <div style="margin:100px;" class="obs-lab" id="obs-lab">{{experiment.observations}}</div>
    </div>
    <div class="experiment-view-heading">Analysis
      <div style="margin:100px;" class="analysis-lab" id="analysis-lab">{{experiment.analysis}}</div>
    </div>
  </section>

<a href="/project/experiment/edit/{{experiment.id}}" class="edit-link">Edit Lab Entry</a>

{{> comments experiment.comments}}

